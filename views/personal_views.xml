<odoo>
  <data>

    <!-- VISTA LISTA -->
    <record id="biblioteca_personal_list" model="ir.ui.view">
        <field name="name">biblioteca personal list</field>
        <field name="model">biblioteca.personal</field>
        <field name="arch" type="xml">
            <list string="Personal">
                <field name="nombre"/>
                <field name="apellido"/>
                <field name="codigo"/>
                <field name="cedula"/>
                <field name="correo"/>
                <field name="telefono"/>
                <field name="direccion"/>
            </list>
        </field>
    </record>

    <!-- VISTA FORMULARIO -->
    <record id="biblioteca_personal_form" model="ir.ui.view">
        <field name="name">biblioteca personal form</field>
        <field name="model">biblioteca.personal</field>
        <field name="arch" type="xml">
            <form string="Personal de Biblioteca">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido"/>
                        <field name="codigo"/>
                        <field name="cedula"/>
                        <field name="correo"/>
                        <field name="telefono"/>
                        <field name="direccion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIÃ“N PARA VISTA -->
    <record id="biblioteca_personal_action_window" model="ir.actions.act_window">
        <field name="name">Personal</field>
        <field name="res_model">biblioteca.personal</field>
        <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>
