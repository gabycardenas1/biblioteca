<odoo>
  <data>

    <!-- LISTA DE USUARIOS -->
    <record id="biblioteca_usuario_list" model="ir.ui.view">
        <field name="name">biblioteca usuario list</field>
        <field name="model">biblioteca.usuarios</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre_completo"/>
                <field name="correo"/>
                <field name="telefono"/>
                <field name="direccion"/>
            </list>
        </field>
    </record>

    <!-- FORMULARIO DE USUARIO -->
    <record id="biblioteca_usuario_form" model="ir.ui.view">
        <field name="name">biblioteca usuario form</field>
        <field name="model">biblioteca.usuarios</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre_completo"/>
                        <field name="cedula"/>
                        <field name="correo"/>
                        <field name="telefono"/>
                        <field name="direccion"/>
                        <field name="fecha_registro"/>
                        <field name="prestamo_ids"/>
                        <field name="multa_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIÃ“N DE VENTANA -->
    <record id="biblioteca_usuario_action_window" model="ir.actions.act_window">
        <field name="name">Usuarios</field>
        <field name="res_model">biblioteca.usuarios</field>
        <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>
