<odoo>
    <data>

        <!-- ==========================================================
             LIST VIEW
        =============================================================-->
        <record id="biblioteca_libro_list" model="ir.ui.view">
            <field name="name">biblioteca.libro.list</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <list string="Libros">
                    <field name="name"/>
                    <field name="autor"/>
                    <field name="categoria"/>
                    <field name="editorial"/>
                    <field name="ejemplares"/>
                    <field name="ejemplares_disponibles"/>
                    <field name="ejemplares_prestados"/>
                    <field name="ejemplares_en_multa"/>
                </list>
            </field>
        </record>


        <!-- ==========================================================
             FORM VIEW
        =============================================================-->
        <record id="biblioteca_libro_form" model="ir.ui.view">
            <field name="name">biblioteca.libro.form</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">

                <form string="Libro">

                    <!-- ========================================= -->
                    <!--                BOTONES                    -->
                    <!-- ========================================= -->
                    <header>

                        <!-- GUARDAR (visible en borrador y edición) -->
                        <button name="guardarLibro"
                                string="Guardar"
                                type="object"
                                class="btn-primary"
                                modifiers='{"invisible": [["state","=","g"]]}'/>

                        <!-- EDITAR (solo cuando ya está guardado) -->
                        <button name="editarLibro"
                                string="Editar"
                                type="object"
                                class="btn-secondary"
                                modifiers='{"invisible": [["state","!=","g"]]}'/>

                        <!-- BUSCAR LIBRO (solo en borrador o edición) -->
                        <button name="buscarLibro"
                                string="Buscar libro"
                                type="object"
                                class="btn-secondary"
                                modifiers='{"invisible": [["state","=","g"]]}'/>

                    </header>


                    <!-- ========================================= -->
                    <!--               STATUSBAR                   -->
                    <!-- ========================================= -->
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="b,g,e"
                           readonly="1"/>


                    <!-- ========================================= -->
                    <!--                CUERPO FORM                 -->
                    <!-- ========================================= -->
                    <sheet>

                        <group string="Información del libro">
                            <field name="name"/>
                            <field name="isbn"/>
                            <field name="autor"/>
                            <field name="categoria"/>
                            <field name="editorial"/>
                            <field name="fecha_publicacion"/>
                            <field name="paginas"/>
                            <field name="ubicacion"/>
                        </group>

                        <group string="Inventario">
                            <field name="ejemplares"/>
                            <field name="ejemplares_disponibles" readonly="1"/>
                            <field name="ejemplares_prestados" readonly="1"/>
                            <field name="ejemplares_en_multa" readonly="1"/>
                        </group>

                        <notebook>
                            <page string="Resumen">
                                <field name="description"/>
                            </page>

                            <page string="Datos Técnicos">
                                <field name="openlibrary_key" readonly="1"/>
                            </page>
                        </notebook>

                    </sheet>

                </form>

            </field>
        </record>


        <!-- ==========================================================
             SEARCH VIEW
        =============================================================-->
        <record id="view_biblioteca_libro_search" model="ir.ui.view">
            <field name="name">biblioteca.libro.search</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <search string="Buscar Libro">
                    <field name="name"/>
                    <field name="autor"/>
                    <field name="categoria"/>
                    <field name="editorial"/>
                </search>
            </field>
        </record>


        <!-- ==========================================================
             ACTION WINDOW
        =============================================================-->
        <record id="biblioteca_libro_action_window" model="ir.actions.act_window">
            <field name="name">Libros</field>
            <field name="res_model">biblioteca.libro</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_biblioteca_libro_list"/>
        </record>

    </data>
</odoo>
